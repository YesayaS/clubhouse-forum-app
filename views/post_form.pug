extends layout

block content
    h1 Create Post
    form(action="" method="POST")
        div
            label(for="title") Title: 
            input(type="text" name="title" required="true" autocomplete="off")
        div
            label(for="body") Body: 
            textarea(name="body", cols="30", rows="3") 
        if errors
            ul.error-msg
            each error in errors
                li=error.msg
        br
        button Create post